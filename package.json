      "output": "dist"
    }
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "nodemon": "^3.1.11"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "dotenv-expand": "^12.0.3",
    "pg": "^8.16.3"
  }
}
