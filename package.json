{
  "name": "electron_drawing_app",
  "version": "1.0.0",
  "description": "make a simple sketch pad app with electron.js for practice",
  "license": "ISC",
  "author": "Steve Majewski",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "dev": "nodemon --ext js,css,html --exec electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder"
